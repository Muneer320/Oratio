run = "cd backend && uvicorn app.main:app --host 0.0.0.0 --port 8000"
modules = ["python-3.12", "nodejs-20", "web"]

[nix]
channel = "stable-25_05"
packages = [
  "freetype",
  "gumbo",
  "harfbuzz",
  "jbig2dec",
  "libiconv",
  "libjpeg_turbo",
  "libxcrypt",
  "mupdf",
  "openjpeg",
  "swig",
  "xcbuild",
]

[deployment]
deploymentTarget = "autoscale"
# Build the frontend before deployment
build = ["bash", "build_frontend.sh"]

# Run both servers, with frontend exposed on port 5000 (required for autoscale health check)
run = [
  "bash",
  "-c",
  "cd backend && uvicorn app.main:app --host 0.0.0.0 --port 8000 & cd frontend && npx serve -s dist -l 5000",
]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 40257
externalPort = 3001

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Server"

[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload --timeout-keep-alive 75 --backlog 2048 --limit-concurrency 1000 --no-access-log"
waitForPort = 8000

[[workflows.workflow]]
name = "Frontend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
